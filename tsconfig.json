{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"]
      },
      "forceConsistentCasingInFileNames": true, /* Ensure that casing is correct in imports. */
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", ".vscode"]
  }